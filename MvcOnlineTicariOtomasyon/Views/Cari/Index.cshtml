@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Cariler</h2>
<br />
<table id="tbl1" class="table table-striped">
    <thead>
        <tr>
            <th>Cari Id</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Şehir</th>
            <th>E-Mail</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detay</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.CariID</td>
                <td>@x.CariAd</td>
                <td>@x.CariSoyad</td>
                <td>@x.CariSehir</td>
                <td>@x.CariMail</td>
                <td> <a href="/Cari/CariSil/@x.CariID" class="btn btn-danger"> Sil</a> </td>
                <td> <a href="/Cari/CariGetir/@x.CariID" class="btn btn-success"> Güncelle</a> </td>
                <td> <a href="/Cari/MusteriSatis/@x.CariID" class="btn btn-info"> Satış Geçmişi </a> </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Cari/YeniCari/" class="btn btn-primary"> Yeni Cari Ekle</a>

