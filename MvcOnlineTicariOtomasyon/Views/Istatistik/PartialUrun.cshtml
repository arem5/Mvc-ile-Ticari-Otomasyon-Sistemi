@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Urun>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Güncel Ürün Tablosu</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0" style="height: 300px;">
                <table class="table table-head-fixed table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ürün</th>
                            <th>Marka</th>
                            <th>Stok</th>
                            <th>Alış Fiyat</th>
                            <th>Satış Fiyat</th>
                            <th>Kategori</th>

                        </tr>
                    </thead>
                    <tbody>
                        @{ int siraNO = 0;}
                        @foreach (var u in Model)
                        {
            <tr>
                <td>@{siraNO++;} @siraNO </td>
                <td>@u.UrunAd</td>
                <td>@u.Marka</td>
                <td>@u.Stok</td>
                <td>@u.AlisFiyatı ₺</td>
                <td>@u.SatisFiyatı ₺</td>
                <td>@u.Kategori.KategoriAd</td>
            </tr>}
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
