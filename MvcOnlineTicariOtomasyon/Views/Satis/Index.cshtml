@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHaraket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<h2>Satış Haraketleri</h2>
<br />

<table id="tbl1" class="table table-striped" style="margin-top:15px;">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam Fiyat</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.SatisID </td>
                <td>@k.Urun.UrunAd / @k.Urun.Marka </td>
                <td>@k.Cariler.CariAd @k.Cariler.CariSoyad </td>
                <td>@k.Personel.PersonelAd @k.Personel.PersonelSoyad </td>
                <td>@k.SatisAdet </td>
                <td>@k.Fiyat </td>
                <td>@k.ToplamTutar </td>
                <td>@k.SatisTarihi </td>

                <td> <a href="/Satis/SatisGetir/@k.SatisID" class="btn btn-success"> Güncelle</a> </td>
                <td> <a href="/Satis/SatisDetay/@k.SatisID" class="btn btn-info"> Detay </a> </td>
            </tr>

        }
    </tbody>
</table>
<a href="/Satis/YeniSatis" class="btn btn-primary"> Yeni Satış Yap</a>


