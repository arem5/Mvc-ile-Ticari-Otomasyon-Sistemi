@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHaraket>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Son On Satış Haraketi</h3>

            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Sıra</th>
                            <th>Ürün</th>
                            <th>Cari</th>
                            <th>Personel</th>
                            <th>Adet</th>
                            <th>Fiyat</th>
                            <th>Toplam Fiyat</th>
                            <th>Tarih</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int siraNO = 0;}
                        @foreach (var k in Model)
                        {
            <tr>
                <td>@{siraNO++;} @siraNO </td>
                <td>@k.Urun.UrunAd / @k.Urun.Marka </td>
                <td>@k.Cariler.CariAd @k.Cariler.CariSoyad </td>
                <td>@k.Personel.PersonelAd @k.Personel.PersonelSoyad </td>
                <td>@k.SatisAdet </td>
                <td>@k.Fiyat ₺</td>
                <td>@k.ToplamTutar ₺</td>
                <td>@k.SatisTarihi </td>

            </tr>}
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>


