@using MvcOnlineTicariOtomasyon.Models.Siniflar
<!--//Buradaki sayfada neyi çağıraaksak onu ekleriz-->
@model List<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Kategoriler</h2>
<br />
<table id="tbl1" class="table table-striped" style="margin-top:15px;">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <!--buradaki model kategoriKOntrole de Kategoris e bağlı-->
    <tbody>
        @foreach (var k in Model)
        {
            <tr>
                <td>
                    @k.KategoriID
                </td>
                <td>
                    @k.KategoriAd
                </td>
                <td> <a href="/Kategori/KategoriSil/@k.KategoriID" class="btn btn-danger"> Sil</a> </td>
                <td> <a href="/Kategori/KategoriGetir/@k.KategoriID" class="btn btn-success"> Güncelle</a> </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Kategori/KategoriEkle" class="btn btn-primary"> Kategori Ekle</a>

